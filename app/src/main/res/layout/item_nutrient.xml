<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/item_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@string/delete_description"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/nutrient_limit"
        android:visibility="visible"
        android:contentDescription="@string/nutrient_name_description"
        android:id="@+id/nutrient_name" />

    <EditText
        android:id="@+id/nutrient_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/colorAccent"
        android:inputType="numberDecimal"
        android:text="@string/nutrient_limit_placeholder" />

    <TextView
        android:id="@+id/grams_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grams_label" />

</LinearLayout>